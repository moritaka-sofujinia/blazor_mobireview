@page "/Login"

@layout AdsOnlyLayout

@* @layout NewsLayout *@
@inject Microsoft.AspNetCore.Components.NavigationManager NavigationManager


@using DoAnCS_Demo1.Data


<main>
    <div class="container pt-5">
        <h1 class="text-center">Login</h1>

        <div class="container">
            <div class="row">
                <div class="mx-auto">
                    <div class="card card-body">

                        <form id="submitForm" action="Login" method="post" data-parsley-validate="" data-parsley-errors-messages-disabled="true" novalidate="" _lpchecked="1">
                            <input type="hidden" name="_csrf" value="7635eb83-1f95-4b32-8788-abec2724a9a4">
                            <div class="form-group required">
                                <label for="username">Username / Email</label>
                                <input type="text" class="form-control text-lowercase" id="username" required="" name="username" value="">
                            </div>
                            <div class="form-group required">
                                <label class="" for="password">
                                    Password
                                </label>
                                <input type="password" class="form-control" required="" id="password" name="password" value="">
                                <a class="ml-auto border-link small-xl" href="/forget-password">Forget?</a>
                            </div>
                            <div class="form-group mt-4 mb-4">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="remember-me" name="remember-me" data-parsley-multiple="remember-me">
                                    <label class="custom-control-label" for="remember-me">Remember me?</label>
                                </div>
                            </div>
                            <div class="form-group pt-1">
                                <button class="btn btn-primary btn-block"  @onclick="Loginpage" type="submit">Log In</button>
                            </div>
                        </form>
                        <p class="small-xl pt-3 text-center">
                            <span class="text-muted">Not a member?</span>
                            <a href="/signup">Sign up</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@code {
    private User user = new User();
    private string errorMessage = "";
    private IConfiguration Configuration;
    private async Task Loginpage()
    {
        try
        {
            UserContext userContext = new UserContext(Configuration);
            var foundUser =  userContext.Users.SingleOrDefault(n => n.username == user.username && n.password == user.password) ;

            if (foundUser != null)
            {
                NavigationManager.NavigateTo("Home1");
            }
            else
            {
                errorMessage = "Tài khoản hoặc mật khẩu không đúng hoặc không điền đầy đủ thông tin.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while processing your request.";
            // Log the error for debugging.
            Console.WriteLine(ex.Message);
        }
    }
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}

